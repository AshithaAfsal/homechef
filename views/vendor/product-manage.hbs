<section id="content">
  <div class="content-wrap " style="padding: 20px;">
    <div class="container clearfix">

      <div class="card shadow mb-4">
        <div class="card-header py-3 mb-4">
          <h2 class="m-0 font-weight-bold color float-left">Product Details</h2>

          <a href="product_add"><button class="btn bg-color text-white float-right mr-auto" data-toggle="modal" data-target="#myModalAdd">Add
            New Product</button></a>
      
        </div>
        <div class="card-body">
          {{#if message}}
            <div class="style-msg successmsg" id="success">
              <div class="sb-msg"><i class="icon-thumbs-up"></i><strong>Well done ! </strong>{{message}}</div>
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
            </div>
          {{/if}}

        <table class="table table-striped" id="product_table">
          <thead>
            <tr>
              {{!-- <th>Sl No</th> --}}
              <th>Product Name</th>
              <th> Price</th>
              <th> Category</th>
              <th> Image</th>

              <th>Action</th>

            </tr>
          </thead>
          <tbody>
            {{#each products}}
            <tr>

              <td>{{ this.product_name }}</td>
              <td>{{ this.price }}</td>
              <td>{{ this.cat_name }}</td>
              <td><img style="width: 50px;height: 50px;"
                  src="../images/product-images/{{this._id}}.jpg" alt="{{this.product_name}}" /> </td>                                   
              <td>
                <a href="javascript:void(0);" class="btn btn-sm bg-color edit" data-id="{{ _id }}"
                  data-product_name="{{ this.product_name }}" data-product_price="{{ this.price }}"
                  data-product_category="{{ this.cat_id }}">Edit</a>
                <a href="javascript:void(0);" class="btn btn-sm btn-danger delete" data-id="{{ _id }}">Delete</a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>




