<!-- Content
============================================= -->
<section id="content">
	<div class="content-wrap">
		<div class="container clearfix">
			<div class="style-msg successmsg" style="display: none;" id="message">
				<div class="sb-msg"><i class="icon-thumbs-up"></i><strong>Well done!</strong> You successfully changed the Status.</div>
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
			</div>
			<label id="message" class="text-success"></label><br>
			<label for="status">Choose a Status:</label>
			<select name="status" id="status" class=" bg-color text-white border">
				<option value="placed">placed</option>				
				<option value="cancelled">cancelled</option>
				<option value="completed">completed</option>
			</select>

			<!-- Shop
					============================================= -->
			<div id="shop" class="shop row grid-container gutter-30" data-layout="fitRows">
				{{#each orders}}

				<div class="product col-12 col-sm-6 col-lg-12">
					<div class="grid-inner row no-gutters">
						<div class="product-image col-lg-4 col-xl-3">
							<input type="hidden" name="order_id" id="order_id" value="{{this._id}}">
							<input type="hidden" name="order_status" id="order_status" value="{{this.order_status}}"
								<input type="hidden" name="product_id" id="product_id" value="{{this.product._id}}" <a
								href="#">
							<img src="/images/product-images/{{this.product._id}}.jpg"
								alt="{{this.product.product_name}}" alt="1" class="rounded"
								style="width:400px;height:180px" />
							</a>
						</div>
						<div class="product-desc col-lg-8 col-xl-9 px-lg-5 pt-lg-0">
							<div class="product-title">
								<h3><a href="#">{{this.product.product_name}}</a></h3>
							</div>
							{{!-- <div class="product-price"> <ins>{{this.product.price}}</ins></div> --}}
							<div class="card product-meta">
								<div class="card-body">
									<span itemprop="productID" class="sku_wrapper">Price: <span
											class="sku">{{this.product.price}}</span></span>
									<span class="posted_in">Quantity: {{this.quantity}}</span>
									<span class="posted_in font-weight-bold">Total: {{this.totalAmount}}</span>

								</div>
							</div>
							<ul class="iconlist d-none d-xl-block mt-md-3">
								<li><i class="icon-caret-right"></i> Name: {{this.users.first_name}}
									{{this.users.last_name}}</li>
								<li><i class="icon-caret-right"></i> Mobile: {{this.users.phone}} </li>
								<li><i class="icon-caret-right"></i> Mobile: {{this.users.email}} </li>
								<li><i class="icon-caret-right"></i> Address: {{this.deliveryDetails.billing_address}},
									{{this.deliveryDetails.billing_city}},{{this.deliveryDetails.billing_pincode}}</li>
							</ul>

						</div>
					</div>
				</div>
				{{/each}}



			</div><!-- #shop end -->

		</div>
	</div>
</section><!-- #content end -->


<script>

	$(document).ready(function () {

		var status = $('#order_status').val();

		$('#status').val(status);

		$('#status').on('change', function () {

			var order_id = $('#order_id').val();
			var status = this.value;

			details = {
				order_id: order_id,
				status: status
			}
			$.ajax({
				url: '/vendor/change_orderstatus_byvendor',
				method: 'post',
				data: details,
				success: (response) => {
					if (response.status) {
						$('#message').show()
						//$('#message').text("Your Status Changed Successfully");
					}

				}
			})
		});

	});
</script>